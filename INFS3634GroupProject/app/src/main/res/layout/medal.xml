<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">


    <ImageView
        android:id="@+id/medal_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weightlifter" />

    <TextView
        android:id="@+id/medal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Bench Lvl 3"
        app:layout_constraintStart_toEndOf="@id/medal_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medal_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="This is the description for the medal"
        app:layout_constraintStart_toStartOf="@id/medal_title"
        app:layout_constraintTop_toBottomOf="@+id/medal_title" />


</androidx.constraintlayout.widget.ConstraintLayout>